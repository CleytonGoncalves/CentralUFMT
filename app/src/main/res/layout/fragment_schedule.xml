<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/schedule_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        rc:alignmentMode="alignBounds"
        rc:columnOrderPreserved="true"
        rc:rowOrderPreserved="true"
        rc:useDefaultMargins="true"
        tools:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/schedule_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        />

</FrameLayout>

