<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
    
    <LinearLayout
        android:id="@+id/schedule_card_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/schedule_card_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="19:00 - 23:00"/>
        
        <View
            style="@style/dividerHorizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"/>
    
    </LinearLayout>
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_card_top"
        android:layout_marginLeft="40dp"
        app:cardBackgroundColor="@color/flatui_green_sea"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            
            <TextView
                android:id="@+id/schedule_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/primary_text_inverse"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                tools:text="Fundamentos da Computação 3"/>
            
            <TextView
                android:id="@+id/schedule_card_classroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/place_schedule"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/primary_text_inverse"
                tools:text="CB03"
                />
        
        </LinearLayout>
    
    </android.support.v7.widget.CardView>

</RelativeLayout>
